<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="664px"
    android:layout_height="464px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/dialog_data_error_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="320px"
            android:src="@mipmap/dialog_exit" />


        <ImageView
            android:id="@+id/iv_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120px"
            android:layout_marginTop="320px"
            android:src="@mipmap/dialog_again" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_count_down"
        style="@style/text_blue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60px"
        android:layout_marginTop="50px"
        android:text="15s"
        android:textSize="26px" />

</RelativeLayout>
