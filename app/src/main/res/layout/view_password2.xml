<?xml version="1.0" encoding="utf-8"?>
<com.healthmall.sail.cat_doctor.widget.PasswordView2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_label"
            style="@style/text_black"
            android:layout_marginLeft="25px"
            android:layout_marginRight="25px"
            android:text="    原密码"
            android:textSize="26px" />

        <View
            android:layout_width="1px"
            android:layout_height="20px"
            android:background="@color/mgray" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="420px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_toLeftOf="@id/cb_check"
            android:background="@color/trans"
            android:drawablePadding="20px"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="12"
            android:paddingBottom="35px"
            android:paddingTop="35px"
            android:textColor="@color/mblack"
            android:textColorHint="@color/mgray"
            android:textSize="26px" />

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25px"
            android:button="@drawable/pwd_check_selector"
            android:paddingBottom="35px"
            android:paddingTop="35px" />

    </LinearLayout>

    <View style="@style/divider" />

</com.healthmall.sail.cat_doctor.widget.PasswordView2>
