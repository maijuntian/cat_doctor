<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="590px"
    android:layout_height="390px"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/text_gray"
        android:layout_marginTop="31px"
        android:text="请选择交互方式"
        android:textSize="20px" />

    <RadioGroup
        android:id="@+id/rg_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_voice"
            style="@style/text_gray"
            android:button="@drawable/nav_trans"
            android:drawablePadding="40px"
            android:drawableTop="@drawable/tip_voice_selector"
            android:gravity="center_horizontal"
            android:text="语音交互"
            android:textColor="@drawable/text_blue_gray_selector"
            android:textSize="18px" />

        <RadioButton
            android:id="@+id/rb_manual"
            style="@style/text_gray"
            android:layout_marginLeft="200px"
            android:button="@drawable/nav_trans"
            android:drawablePadding="40px"
            android:drawableTop="@drawable/tip_manual_selector"
            android:gravity="center_horizontal"
            android:text="点击交互"
            android:textColor="@drawable/text_blue_gray_selector"
            android:textSize="18px" />

    </RadioGroup>

</LinearLayout>