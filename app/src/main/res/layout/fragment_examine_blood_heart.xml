<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/examine_main_menu3_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_marginLeft="80px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_step1"
            style="@style/text_black"
            android:text="@string/opra_tip"
            android:textSize="20px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:src="@mipmap/examine_step2" />

        <TextView
            android:id="@+id/tv_step2"
            style="@style/text_mgray"
            android:text="@string/measure_process"
            android:textSize="20px" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:src="@mipmap/examine_step2" />

        <TextView
            android:id="@+id/tv_step3"
            style="@style/text_mgray"
            android:text="@string/measure_result"
            android:textSize="20px" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bar_step3"
        android:layout_width="1540px"
        android:layout_height="130px"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:visibility="gone">


        <ImageView
            android:id="@+id/iv_reexamine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340px"
            android:layout_toRightOf="@id/iv_report"
            android:src="@mipmap/examine_retest_o" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80px"
            android:src="@mipmap/examine_start_next" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_step1_alarm"
        style="@style/text_white"
        android:layout_width="1540px"
        android:layout_height="130px"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/examine_body_tip1"
        android:textSize="30px" />

    <LinearLayout
        android:id="@+id/ll_step1"
        android:layout_width="match_parent"
        android:layout_height="490px"
        android:layout_above="@id/tv_step1_alarm"
        android:layout_marginBottom="178px"
        android:layout_marginRight="375px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="360px"
            android:layout_height="match_parent"
            android:layout_marginLeft="80px"
            android:src="@mipmap/bp_step1" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:src="@mipmap/examine_step" />

        <ImageView
            android:layout_width="360px"
            android:layout_height="match_parent"
            android:src="@mipmap/bp_step2" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:src="@mipmap/examine_step" />


        <ImageView
            android:layout_width="360px"
            android:layout_height="match_parent"
            android:src="@mipmap/bp_step3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_step23"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130px"
        android:layout_marginRight="375px"
        android:layout_marginTop="206px"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80px"
                android:background="@mipmap/bp_hr_dbp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingLeft="40px">

                <com.healthmall.sail.cat_doctor.widget.NoPaddingTextView
                    android:id="@+id/tv_sp"
                    style="@style/text_white"
                    android:text="00"
                    android:textSize="72px" />

                <TextView
                    style="@style/text_white"
                    android:layout_marginLeft="8px"
                    android:text="mmhg"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:background="@mipmap/bp_hr_sbp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingLeft="40px">

                <com.healthmall.sail.cat_doctor.widget.NoPaddingTextView
                    android:id="@+id/tv_dp"
                    style="@style/text_white"
                    android:text="00"
                    android:textSize="72px" />

                <TextView
                    style="@style/text_white"
                    android:layout_marginLeft="8px"
                    android:text="mmhg"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:background="@mipmap/bp_hr_pulse"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingLeft="40px">

                <com.healthmall.sail.cat_doctor.widget.NoPaddingTextView
                    android:id="@+id/tv_hr"
                    style="@style/text_white"
                    android:text="00"
                    android:textSize="72px" />

                <TextView
                    style="@style/text_white"
                    android:layout_marginLeft="8px"
                    android:text="bpm"
                    android:textSize="24px" />

            </LinearLayout>

            <!-- <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="40px"
                 android:background="@mipmap/bp_hr_perbp"
                 android:gravity="bottom"
                 android:orientation="horizontal"
                 android:paddingBottom="20px"
                 android:paddingLeft="40px">

                 <com.healthmall.sail.cat_doctor.widget.NoPaddingTextView
                     style="@style/text_white"
                     android:text="00"
                     android:textSize="72px" />

                 <TextView
                     style="@style/text_white"
                     android:layout_marginLeft="8px"
                     android:text="mmhg"
                     android:textSize="24px" />

             </LinearLayout>-->

        </LinearLayout>

        <TextView
            style="@style/text_gray"
            android:layout_marginLeft="80px"
            android:layout_marginTop="40px"
            android:text="数据解析      Data Analysis"
            android:textSize="22px" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="344px"
                    android:layout_height="344px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.healthmall.sail.cat_doctor.widget.NoPaddingTextView
                            android:id="@+id/tv_pressure"
                            style="@style/text_blue"
                            android:text="107/65"
                            android:textSize="66px"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_pressure_tip"
                            style="@style/text_blue"
                            android:layout_marginTop="10px"
                            android:text="血压偏高"
                            android:textSize="24px" />
                    </LinearLayout>

                    <com.healthmall.sail.cat_doctor.widget.ArcProgressView
                        android:id="@+id/apv_pressure"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:progressWidth="22px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20px"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/bp_hr_bp_tip" />

                </RelativeLayout>

                <TextView
                    style="@style/text_mgray"
                    android:layout_marginTop="-40px"
                    android:text="解读结果"
                    android:textColor="@color/xgray"
                    android:textSize="22px" />

                <TextView
                    style="@style/text_mgray"
                    android:layout_marginTop="20px"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="10px"
                    android:text="@string/blood_o_tip_high"
                    android:textSize="18px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="344px"
                    android:layout_height="344px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.healthmall.sail.cat_doctor.widget.NoPaddingTextView
                            android:id="@+id/tv_hr2"
                            style="@style/text_blue"
                            android:text="96"
                            android:textSize="94px"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_hr_tip"
                            style="@style/text_blue"
                            android:layout_marginTop="10px"
                            android:text="心率正常"
                            android:textSize="24px" />
                    </LinearLayout>


                    <com.healthmall.sail.cat_doctor.widget.ArcProgressView
                        android:id="@+id/apv_hr2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:progressWidth="22px" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="20px"
                        android:src="@mipmap/bp_hr_tip" />

                </RelativeLayout>

                <TextView
                    style="@style/text_mgray"
                    android:layout_marginTop="-44px"
                    android:text="解读结果"
                    android:textColor="@color/xgray"
                    android:textSize="22px" />

                <TextView
                    style="@style/text_mgray"
                    android:layout_marginTop="20px"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="10px"
                    android:text="@string/blood_o_tip_high"
                    android:textSize="18px" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>