<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tip_bottom_hide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/white"
        android:orientation="vertical">

        <com.healthmall.sail.cat_doctor.widget.ProgressView
            android:id="@+id/pv_progress"
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_content"
            style="@style/text_mgray"
            android:layout_marginTop="10px"
            android:text="您正在测量体脂，请双手握住体脂测量器的把手保持不动..."
            android:textSize="20px" />

        <TextView
            android:id="@+id/tv_tip"
            style="@style/text_mgray"
            android:layout_marginTop="24px"
            android:textSize="18px"
            android:layout_marginLeft="350px"
            android:text="@string/fat_tip"/>

    </LinearLayout>

</LinearLayout>