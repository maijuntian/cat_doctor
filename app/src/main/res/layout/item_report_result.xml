<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/text_mgray"
            android:layout_marginTop="70px"
            android:text="请在"
            android:textColor="@color/xxgray"
            android:textSize="48px"
            android:textStyle="bold" />

        <TextView
            style="@style/text_green"
            android:layout_marginTop="70px"
            android:text="健康猫APP"
            android:textSize="48px"
            android:textStyle="bold" />


        <TextView
            style="@style/text_mgray"
            android:layout_marginTop="70px"
            android:text="中查看详情报告及运动方案"
            android:textColor="@color/xxgray"
            android:textSize="48px"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        style="@style/text_mgray"
        android:layout_marginTop="14px"
        android:text="症型是猫博士采用人工智能算法，通过您的体测详情综合面诊、舌诊、中医体质辨识的结果分析得出"
        android:textColor="#bdbdbd"
        android:textSize="16px" />

    <TextView
        style="@style/text_mgray"
        android:layout_marginTop="49px"
        android:text="根据体测结果分析，您的症型为"
        android:textColor="#bdbdbd"
        android:textSize="20px" />

    <com.healthmall.sail.cat_doctor.widget.GridViewForScrollView
        android:id="@+id/gv_type"
        android:layout_width="780px"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:horizontalSpacing="72px"
        android:numColumns="3"
        android:verticalSpacing="20px" />

    <com.healthmall.sail.cat_doctor.widget.ListViewForScrollView
        android:id="@+id/lv_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:divider="@color/trans"
        android:dividerHeight="30px" />

    <TextView
        android:id="@+id/tv_more"
        style="@style/text_mgray"
        android:layout_marginBottom="40px"
        android:background="@drawable/bg_corner_gray"
        android:paddingBottom="10px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="10px"
        android:text="更多"
        android:textSize="30px" />

</LinearLayout>