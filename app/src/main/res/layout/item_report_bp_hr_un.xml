<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/text_xblack"
        android:layout_marginBottom="40px"
        android:layout_marginTop="49px"
        android:text="血压/心率"
        android:textSize="60px"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_bp_hr_bg_un"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30px"
        android:background="@mipmap/report_bp_bg_un"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            style="@style/text_white"
            android:layout_marginTop="336px"
            android:gravity="center_horizontal"
            android:text="@string/report_bp_hr_un_tip"
            android:textSize="36px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_examine_bp_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="91px"
            android:src="@mipmap/report_exmaine" />

    </LinearLayout>

</LinearLayout>
