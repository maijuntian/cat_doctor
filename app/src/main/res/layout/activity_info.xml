<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/text_sgray"
        android:layout_marginTop="100px"
        android:text="欢迎使用猫博士体测机，请完善您的信息，已确保体测的准确性~"
        android:textSize="34px"
        android:textStyle="bold" />

    <TextView
        style="@style/text_mmblack"
        android:layout_marginTop="80px"
        android:text="性别"
        android:textSize="48px"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_women"
            style="@style/text_sgray"
            android:button="@drawable/nav_trans"
            android:drawablePadding="35px"
            android:drawableTop="@drawable/info_women_selector"
            android:text="Women 女"
            android:textSize="34px"
            android:textStyle="bold" />


        <RadioButton
            android:id="@+id/rb_man"
            style="@style/text_sgray"
            android:layout_marginLeft="300px"
            android:button="@drawable/nav_trans"
            android:checked="true"
            android:drawablePadding="35px"
            android:drawableTop="@drawable/info_men_selector"
            android:text="Men 男"
            android:textSize="34px"
            android:textStyle="bold" />

    </RadioGroup>


    <TextView
        style="@style/text_mmblack"
        android:layout_marginTop="80px"
        android:text="年龄"
        android:textSize="48px"
        android:textStyle="bold" />

    <View
        android:layout_width="700px"
        android:layout_height="1px"
        android:layout_marginTop="35px"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_age"
        style="@style/text_sgray"
        android:layout_width="700px"
        android:button="@drawable/nav_trans"
        android:gravity="center_horizontal"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        android:text="18"
        android:textSize="34px" />

    <View
        android:layout_width="700px"
        android:layout_height="1px"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_save"
        style="@style/text_white"
        android:layout_marginTop="35px"
        android:background="@drawable/button_corner"
        android:paddingBottom="16px"
        android:paddingLeft="94px"
        android:paddingRight="94px"
        android:paddingTop="16px"
        android:text="保存"
        android:textSize="26px" />

</LinearLayout>