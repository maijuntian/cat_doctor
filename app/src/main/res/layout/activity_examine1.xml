<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/examine_logout_selector" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_mgray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:text="2017年8月2日 周三 17:80"
            android:textSize="16px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/examine_top_bg" />

        <RadioGroup
            android:id="@+id/rg_menu"
            android:layout_width="233px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="48px"
            android:gravity="right"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/examine_menu1_unfinish_selector" />

            <RadioButton
                android:id="@+id/rb_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/examine_menu11_unfinish_selector" />

            <RadioButton
                android:id="@+id/rb_bloodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/examine_menu2_unfinish_selector" />

            <RadioButton
                android:id="@+id/rb_blood_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/examine_menu3_unfinish_selector" />

            <RadioButton
                android:id="@+id/rb_face_ton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/examine_menu4_unfinish_selector"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/examine_menu5_unfinish_selector" />

        </RadioGroup>


        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>