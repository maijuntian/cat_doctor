<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="116px"
        android:layout_marginTop="52px"
        android:orientation="vertical">

        <TextView
            style="@style/text_black"
            android:text="面诊/舌诊"
            android:textSize="36px" />

        <TextView
            style="@style/text_mgray"
            android:layout_marginTop="7px"
            android:text="N Diagnosis/Tongue Diagnosis"
            android:textSize="18px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3px"
                android:src="@mipmap/face_ton_progress1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:orientation="vertical">

                <TextView
                    style="@style/text_blue"
                    android:text="拍摄面诊"
                    android:textSize="20px" />

                <TextView
                    style="@style/text_mgray"
                    android:layout_marginTop="20px"
                    android:text="拍摄完成"
                    android:textSize="20px" />

                <TextView
                    style="@style/text_mgray"
                    android:layout_marginTop="20px"
                    android:text="拍摄舌诊"
                    android:textSize="20px" />

                <TextView
                    style="@style/text_mgray"
                    android:layout_marginTop="20px"
                    android:text="拍摄完成"
                    android:textSize="20px" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120px">

            <com.wonderkiln.camerakit.CameraView
                android:id="@+id/cv_camera"
                android:layout_width="400px"
                android:layout_height="400px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90px"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="290px"
                android:src="@mipmap/face_ton_scan_point" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/face_ton_scan" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/face_ton_scan_bg" />

        </RelativeLayout>

        <TextView
            style="@style/text_mgray"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="188px"
            android:text="请目视镜头，将完整的面部放于扫描区"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_take_pic"
            style="@style/text_white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="780px"
            android:background="@drawable/blue_button_bg"
            android:gravity="center"
            android:text="拍摄"
            android:textSize="32px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="187px"
        android:layout_marginTop="350px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/face_ton_face_tip" />

        <TextView
            style="@style/text_mgray"
            android:layout_marginTop="36px"
            android:text="示例图"
            android:textSize="32px" />

        <TextView
            style="@style/text_mgray"
            android:layout_marginTop="19px"
            android:gravity="center_horizontal"
            android:text="@string/face_tip"
            android:textSize="20px" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="257px"
        android:layout_marginTop="150px"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px">

            <ImageView
                android:id="@+id/iv_face_ton_result"
                android:layout_width="400px"
                android:layout_height="400px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90px"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/face_ton_scan_bg2" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_face_ton_tip"
            style="@style/text_mgray"
            android:layout_centerHorizontal="true"
            android:text="面诊照片"
            android:textSize="36px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="458px"
        android:layout_marginTop="150px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            style="@style/text_mgray"
            android:layout_centerHorizontal="true"
            android:text="中医面相解说图"
            android:textSize="36px" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/face_ton_scan_bg2" />


    </LinearLayout>

</RelativeLayout>