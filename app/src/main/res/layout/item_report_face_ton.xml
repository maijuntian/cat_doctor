<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/text_xblack"
        android:layout_marginBottom="50px"
        android:layout_marginTop="49px"
        android:text="面诊/舌诊"
        android:textSize="60px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30px"
        android:background="@mipmap/report_face_ton_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="153px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_face"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_marginLeft="70px"
                    android:layout_marginTop="70px"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/report_face_ton_circle" />

            </RelativeLayout>

            <TextView
                style="@style/text_mblack"
                android:text="面诊"
                android:textSize="31px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230px"
            android:layout_marginTop="153px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_ton"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_marginLeft="70px"
                    android:layout_marginTop="70px"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/report_face_ton_circle" />

            </RelativeLayout>

            <TextView
                style="@style/text_mblack"
                android:text="舌诊"
                android:textSize="31px" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>