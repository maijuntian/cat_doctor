<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.healthmall.sail.cat_doctor.widget.PulseRateView
            android:layout_width="813px"
            android:layout_height="428px" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10px"
                android:src="@mipmap/bp_hr_bp_bg" />

            <com.healthmall.sail.cat_doctor.widget.WaveView
                android:id="@+id/wave"
                android:layout_width="144px"
                android:layout_height="460px" />

            <ImageView
                android:layout_width="144px"
                android:layout_height="460px"
                android:src="@mipmap/bp_hr_bp_bottle1" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10px"
                android:src="@mipmap/bp_hr_bp_bg" />

            <com.healthmall.sail.cat_doctor.widget.WaveView
                android:id="@+id/wave2"
                android:layout_width="144px"
                android:layout_height="460px" />

            <ImageView
                android:layout_width="144px"
                android:layout_height="460px"
                android:src="@mipmap/bp_hr_bp_bottle1" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">


        <com.healthmall.sail.cat_doctor.widget.WaterView
            android:id="@+id/wv_bo"
            android:layout_width="290px"
            android:layout_height="350px" />

        <com.healthmall.sail.cat_doctor.widget.HeartRateView

            android:layout_width="390px"
            android:layout_height="136px"
            android:layout_marginLeft="50px" />

    </LinearLayout>

    <com.healthmall.sail.cat_doctor.widget.ProgressView
        android:layout_width="1000px"
        android:layout_height="20px" />


</LinearLayout>