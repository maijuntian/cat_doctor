                    android:textStyle="bold" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_fat_percent"
                        style="@style/text_gray"
                        android:drawablePadding="10px"
