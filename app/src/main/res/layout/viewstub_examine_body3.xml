            android:src="@mipmap/examine_start_next" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="375px"
        android:layout_marginTop="170px">

        <LinearLayout
            android:layout_width="241px"
            android:layout_height="match_parent"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:src="@mipmap/body_info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/body_cup" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.healthmall.sail.cat_doctor.widget.NoPaddingTextView
                            android:id="@+id/tv_score"
                            style="@style/text_blue"
                            android:text="90"
                            android:textSize="40px"
                            android:textStyle="bold" />


                        <TextView
                            style="@style/text_gray"
                            android:layout_marginTop="5px"
                            android:text="@string/com_grade"
                            android:textSize="16px"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/divider"
                    android:layout_marginTop="50px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="120px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.healthmall.sail.cat_doctor.widget.NoPaddingTextView
                            android:id="@+id/tv_age"
                            style="@style/text_blue"
                            android:text="90"
                            android:textSize="28px"
                            android:textStyle="bold" />


                        <TextView
                            style="@style/text_gray"
                            android:layout_marginTop="5px"
                            android:text="@string/body_age"
                            android:textSize="16px"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="120px"
                        android:background="@color/mmgray" />


